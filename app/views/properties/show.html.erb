<div>
    <h1 id="property_title"><%= @property.title%></h1>
</div>
<div id="property_info">
    <p> Imóvel de: <%= @property.property_owner.email %></p>
    <p> Região: <%= @property.property_location.title %></p>
    <p> Tipo: <%= @property.property_type.title %></p>
    <p><%= @property.description %></p>
    <p>Quartos: <%= @property.rooms%></p>
    <p>Banheiros: <%= @property.bathrooms%></p>
    <p>Aceita Pets: <%= if @property.pets; 'Sim' else 'Não' end %></p>
    <p>Estacionamento: <%= if @property.parking_slot; 'Sim' else 'Não' end %></p>
    <p>Diária: <%= number_to_currency(@property.daily_rate, unit: 'R$', separator: ',', format: "%u %n") %></p>
</div>
<div>
    <h3>Verificar datas</h3>
    <%= form_with model: @property_book, url: property_property_books_path(@property) do |f| %>
        <%= f.label :start_date, 'Data de início' %>    
        <%= f.date_field :start_date %>    
        <%= f.label :end_date, 'Data de término' %>    
        <%= f.date_field :end_date %>   
        <%= f.label :guests, 'Quantidade de pessoas' %>
        <%= f.number_field :guests, step: 1, min: 1%>
        <%= f.submit 'Enviar pedido'%>
    <% end %>
</div>