<!DOCTYPE html>
<html>
  <head>
    <title>Flats</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="top_bar">
      <div class="top_bar">
        <span class="top_bar"><%= link_to 'Início', root_path %></span>
        <% if property_owner_signed_in? %>
          <span class="top_bar"><%= link_to 'Meus imóveis', my_properties_properties_path %></span>
          <span class="top_bar"><%= current_property_owner.email%></span>
          <span class="top_bar"><%= link_to 'Logout', destroy_property_owner_session_path, method: :delete %></span>
        <% elsif user_signed_in? %>
          <span class="top_bar"><%= current_user.email%></span>
          <span class="top_bar"><%= link_to 'Logout', destroy_user_session_path, method: :delete %></span>
        <% else %>
          <span class="top_bar"><%= link_to 'Entrar como proprietário', new_property_owner_session_path %></span>
          <span class="top_bar"><%= link_to 'Entrar como usuário', new_user_session_path %></span>
        <% end %>
      </div>
    </nav>

    <div class="login_alerts">
      <p class="login_alerts"><%= notice %></p>
      <p class="login_alerts"><%= alert %></p>
    </div>

    <%= yield %>
  </body>
</html>
